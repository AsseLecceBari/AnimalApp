<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments_mieiAnimali.RichiediCaricoFragment">




        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleMyAnimals"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mostraInCarico"
            app:layout_constraintVertical_bias="0.0"
            tools:listitem="@layout/recycle_view_animals"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            />


    <FrameLayout
        android:layout_width="400dp"
        android:layout_height="123dp"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btnInviaRichiesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="16dp"
            android:text="@string/invia_richiesta" />
    </FrameLayout>


</FrameLayout>