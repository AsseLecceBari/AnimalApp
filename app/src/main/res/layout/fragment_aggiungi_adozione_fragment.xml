<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fragments.aggiungi_adozione_fragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleaggiungiAdozione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:listitem="@layout/recycle_view_aggiungiadozione"


        >


    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Btnaggiungiadozioni"
        style="@style/ShapeAppearance.Material3.Corner.ExtraSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusableInTouchMode="false"
        android:onClick="aggiungiAdozioni"
        android:src="?android:attr/textCheckMark"
        app:backgroundTint="@android:color/holo_orange_light"
        tools:ignore="SpeakableTextPresentCheck" />


</FrameLayout>