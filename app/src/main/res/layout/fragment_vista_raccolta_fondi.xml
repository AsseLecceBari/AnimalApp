<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
xmlns:map="http://schemas.android.com/apk/res-auto"
android:id="@+id/segnalazioneLayout"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="fragments_segnalazioni.fragment_vista_raccoltaFondi">
    >

<ScrollView
    android:id="@+id/scrollViewVistaraccoltaFondi"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/segnalazioneLayoutZonaraccoltaFondi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:gravity="top|center"
        android:orientation="vertical"
        android:padding="24dp"
        tools:context="fragments_segnalazioni.fragment_vista_raccoltaFondi"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/immagine"
            android:layout_width="200dp"
            android:layout_height="200dp"
            tools:src="@drawable/ic_launcher_foreground" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/data"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="data"
            android:textSize="12dp"
            android:gravity="right"
            />

        <com.google.android.material.divider.MaterialDivider
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            />
        <com.google.android.material.textview.MaterialTextView
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Titolo"
            android:id="@+id/titolo"
            android:layout_marginTop="12dp"
            android:textSize="28dp">
        </com.google.android.material.textview.MaterialTextView>


        <com.google.android.material.divider.MaterialDivider
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            />

        <com.google.android.material.textview.MaterialTextView
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descrizione"
            android:id="@+id/descrizione"
            android:layout_marginTop="12dp"
            android:textSize="28dp">
        </com.google.android.material.textview.MaterialTextView>

        <com.google.android.material.divider.MaterialDivider
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            />

    </LinearLayout>

</ScrollView>

<com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/btnVaiAlLink"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:src="@android:drawable/arrow_up_float"
    tools:ignore="SpeakableTextPresentCheck" />

    <!--
        <include layout="@layout/fab" />-->
    </FrameLayout>

