<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:layout_marginEnd="2dp">

    <LinearLayout
        android:layout_width="172dp"
        android:layout_height="match_parent"
        android:background="?attr/colorSecondaryContainer"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageAnimal"
            android:layout_width="match_parent"


            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/nomeAnimaleView"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="TextView"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageAnimal" />

        <LinearLayout
            android:id="@+id/posizione_annuncio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:foregroundGravity="left"
                app:srcCompat="@drawable/baseline_location_pin_black_24" />


            <TextView
                android:id="@+id/zona"
                style="@style/MaterialAlertDialog.Material3"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"


                app:layout_constraintStart_toEndOf="@+id/nomeAnimaleView"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:foregroundGravity="left"
                app:srcCompat="@drawable/outline_person_black_24" />

            <TextView
                android:id="@+id/nomeProprietario"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1" />
        </LinearLayout>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>


