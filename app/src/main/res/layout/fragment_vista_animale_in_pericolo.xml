<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:id="@+id/segnalazioneLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments_segnalazioni.fragment_vista_animaleInPericolo"
    >

    <ScrollView
        android:id="@+id/scrollViewVistaAnimaleInPericolo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/segnalazioneLayoutAnimaleInPericolo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:gravity="top|center"
            android:orientation="vertical"
            android:padding="24dp"
            tools:context="fragments_segnalazioni.fragment_vista_animaleInPericolo">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ImmagineAnimaleInPericolo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                tools:src="@drawable/ic_launcher_foreground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.google.android.material.divider.MaterialDivider
                    style="@style/AppTheme"
                    android:layout_width="140dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="13dp"

                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Titolo "
                    android:textSize="18dp"
                    />
                <com.google.android.material.divider.MaterialDivider
                    style="@style/AppTheme"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="13dp"

                    />

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Titolo"
                android:id="@+id/titoloReportAnimaleInPericolo"
                android:layout_marginTop="12dp"
                android:textSize="28dp">
            </com.google.android.material.textview.MaterialTextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.google.android.material.divider.MaterialDivider
                    style="@style/AppTheme"
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="13dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Descrizione "
                    android:textSize="18dp"
                    />
                <com.google.android.material.divider.MaterialDivider
                    style="@style/AppTheme"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="13dp"

                    />

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descrizione"
                android:id="@+id/DescrizioneAnimaleInPericolo"
                android:layout_marginTop="12dp"
                android:textSize="28dp">
            </com.google.android.material.textview.MaterialTextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.google.android.material.divider.MaterialDivider
                    style="@style/AppTheme"
                    android:layout_width="140dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="13dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Mappa "
                    android:textSize="18dp"
                    />
                <com.google.android.material.divider.MaterialDivider
                    style="@style/AppTheme"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="13dp"

                    />

            </LinearLayout>

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapViewAnimaleInPericolo"
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:layout_marginTop="25dp"
                />



            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dataAnimaleInPericolo"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="data"
                android:textSize="12dp"
                android:gravity="right"
                />
        </LinearLayout>
    </ScrollView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonVistaSegnalazioneAnimaleInPericolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:clickable="true"
        android:src="@android:drawable/btn_dialog"
        tools:ignore="SpeakableTextPresentCheck"
        />

</FrameLayout>

