<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.aggiungi_segnalazione_fragment"
    android:id="@+id/frameTipi">




    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridTipi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="2"
        app:rowCount="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/smarrimento"
                android:layout_width="205dp"
                android:layout_height="205dp"
                android:background="@drawable/roundcorner"
                android:contentDescription="smarrimento"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/textSmarrimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Smarrimento"
                android:textAlignment="center" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/animaleFerito"
                android:layout_width="205dp"
                android:layout_height="205dp"
                android:background="@drawable/roundcorner"
                android:src="@drawable/ic_launcher_foreground"

                />

            <TextView
                android:id="@+id/textAnimaleFerito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Animale Ferito"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/pericolo"
                android:layout_width="205dp"
                android:layout_height="205dp"
                android:background="@drawable/roundcorner"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/textPericolo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pericolo"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/news"
                android:layout_width="205dp"
                android:layout_height="205dp"
                android:background="@drawable/roundcorner"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/textNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="News"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/raccoltaFondi"
                android:layout_width="205dp"
                android:layout_height="205dp"
                android:background="@drawable/roundcorner"
                android:src="@drawable/ic_launcher_foreground"

                />

            <TextView
                android:id="@+id/textRaccoltaFondi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Raccolta Fondi"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ritrovamento"
                android:layout_width="205dp"
                android:layout_height="205dp"
                android:background="@drawable/roundcorner"
                android:contentDescription="ritrovamento"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/textRitrovamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ritrovamento"
                android:textAlignment="center" />
        </LinearLayout>

    </androidx.gridlayout.widget.GridLayout>


</FrameLayout>