<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments_segnalazioni.aggiungi_segnalazione_fragment"
    android:id="@+id/frameTipi">



<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridTipi"
            android:layout_width="299dp"
            android:layout_height="600dp"
            android:layout_gravity="center"
            app:columnCount="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rowCount="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ritrovamento"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/roundcorner"
                    android:contentDescription="@string/ritrovamento"
                    android:src="@drawable/finding"
                    android:scaleType="fitXY"
                    android:maxHeight="100dp"
                    android:maxWidth="100dp"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/textRitrovamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ritrovamento"
                    android:textAlignment="center" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/animaleFerito"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/roundcorner"
                    android:src="@drawable/injury"
                    android:scaleType="fitXY"
                    android:maxHeight="100dp"
                    android:maxWidth="100dp"
                    android:adjustViewBounds="true"

                    />

                <TextView
                    android:id="@+id/textAnimaleFerito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/animale_ferito"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/pericolo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/roundcorner"
                    android:src="@drawable/warning"
                    android:scaleType="fitXY"
                    android:maxHeight="100dp"
                    android:maxWidth="100dp"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/textPericolo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pericolo"
                    android:textAlignment="center"
                    android:layout_marginBottom="25dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/news"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/roundcorner"
                    android:src="@drawable/newspaper"
                    android:scaleType="fitXY"
                    android:maxHeight="100dp"
                    android:maxWidth="100dp"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/textNews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/news"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/raccoltaFondi"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/roundcorner"
                    android:src="@drawable/fundraising"
                    android:scaleType="fitXY"
                    android:maxHeight="100dp"
                    android:maxWidth="100dp"
                    android:adjustViewBounds="true"

                    />

                <TextView
                    android:id="@+id/textRaccoltaFondi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/raccolta_fondi"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/smarrimento"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/roundcorner"
                    android:contentDescription="@string/smarrimento"
                    android:src="@drawable/missing"
                    android:scaleType="fitXY"
                    android:maxHeight="100dp"
                    android:maxWidth="100dp"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/textSmarrimento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:text="@string/smarrimento"
                    android:textAlignment="center" />
            </LinearLayout>

        </androidx.gridlayout.widget.GridLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>