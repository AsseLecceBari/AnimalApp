<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments_segnalazioni.ritrovamento" >


    <Button
        android:id="@+id/gps"
        android:layout_width="91dp"
        android:layout_height="41dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="16dp"
        android:text="Gps"
        app:layout_constraintBottom_toTopOf="@+id/cerca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.695"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRitrovamento"
        android:layout_width="392dp"
        android:layout_height="568dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cerca" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etRegIndirizzo"
        android:layout_width="266dp"
        android:layout_height="46dp"
        android:hint="Indirizzo di ritrovo"
        app:layout_constraintBottom_toTopOf="@+id/cerca"
        app:layout_constraintEnd_toStartOf="@+id/gps"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.888" />

    <Button
        android:id="@+id/cerca"
        android:layout_width="370dp"
        android:layout_height="49dp"
        android:layout_marginTop="56dp"
        android:text="Cerca animali in zona"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>